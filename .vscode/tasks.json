{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}"
            ],
            "options": {"cwd": "/usr/bin"},
            "problemMatcher": ["$gcc"],
            "group": "build"
        }
    ]
}